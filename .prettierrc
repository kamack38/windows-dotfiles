{
    "bracketSpacing": true,
    "semi": true,
    "tabWidth": 4,
    "printWidth": 60,
    "trailingComma": "all",
    "arrowParens": "always",
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 1
            }
        }
    ]
}
