{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++: build active file (Windows)",
            "command": "C:\\ProgramData\\chocolatey\\bin\\g++.exe",
            "args": ["-fdiagnostics-color=always", "-g", "${file}", "-o", "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task created by Kamack38."
        },
        {
            "type": "cppbuild",
            "label": "C++: build active file (Linux)",
            "command": "/usr/bin/g++",
            "args": ["-g", "${file}", "-fsanitize=address", "-o", "${fileDirname}/bin/${fileBasenameNoExtension}"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task created by Kamack38."
        }
    ]
}
